@model WebSite.DataLayer.Entities.Service.Service
@{
    string[] tagList = Model.Tags!.Split(",");
}

<div class="single_widgets widget_tags">
    <h4 class="title">
        برچسب ها
    </h4>
    <hr/>
    <ul>
        @foreach (var item in tagList)
        {
            <li>
                <a asp-controller="Service" asp-action="Index" asp-route-search="@item">
                    @item
                </a>
            </li>
        }
    </ul>
</div>