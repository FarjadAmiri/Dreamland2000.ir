@model IEnumerable<WebSite.DataLayer.Entities.Address.City>


<div class="single_widgets widget_category">
    <h4 class="title">
        شهر ها
    </h4>
    <hr/>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a asp-controller="RealEstateProject" asp-action="Grid" asp-route-city="@item.Id" title="@item.Title">
                    @item.Title
                  
                </a>
            </li>          
        }
        <li>
            <a asp-controller="RealEstateProject" asp-action="Grid" title="همه پروژه ها">
                همه پروژه ها. . .
            </a>
        </li>
        
    </ul>
</div>