@model WebSite.Core.ViewModel.Contact.ContactSendMessageViewModel
<partial name="_AlertPartial" />

<div class="property_block_wrap">

    <div class="property_block_wrap_header">
        <h4 class="property_block_title">
            فرم ارسال پیام
        </h4>
    </div>

    <div class="block-body">
        <form asp-action="SendMessage" asp-controller="Contact" method="post">
            <input asp-for="Captcha" type="hidden"/>

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="form-group">
                        <label>
                            نام
                        </label>
                        <input asp-for="Name" type="text" class="form-control simple">
                        <span asp-validation-for="Name" class="alert-danger" style="color: red"></span>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-group">
                        <label>
                            تلفن
                        </label>
                        <input asp-for="Tell" type="text" class="form-control simple">
                        <span asp-validation-for="Tell" class="alert-danger" style="color: red"></span>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="form-group">
                        <label>
                            ایمیل
                        </label>
                        <input asp-for="Email" type="email" class="form-control simple">
                        <span asp-validation-for="Email" class="alert-danger" style="color: red"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12">
                    <div class="form-group">
                        <label>
                            موضوع
                        </label>
                        <input asp-for="Subject" type="text" class="form-control simple">
                        <span asp-validation-for="Subject" class="alert-danger" style="color: red"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12">
                    <div class="form-group">
                        <label>
                            پیام
                        </label>
                        <textarea asp-for="Message" class="form-control simple"></textarea>
                        <span asp-validation-for="Message" class="alert-danger" style="color: red"></span>
                    </div>

                </div>

                <div class="form-group">
                    <button class="btn btn-theme" type="submit">
                        ارسال درخواست
                    </button>
                </div>
            </div>
        </form>

    </div>

</div>
