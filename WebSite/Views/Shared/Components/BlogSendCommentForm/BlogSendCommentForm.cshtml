@model WebSite.Core.ViewModel.Blog.BlogSendCommentViewModel
<div class="comment-box submit-form">
    <h3 class="reply-title">
        ارسال دیدگاه
    </h3>
    <div class="comment-form">
        <partial name="_AlertPartial"/>

        <form asp-controller="Blog" asp-action="SendComment" method="post">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <input asp-for="Name" placeholder="نام *" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group">
                        <input asp-for="Tell" placeholder="تلفن" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group">
                        <input asp-for="Email" placeholder="ایمیل" type="email" class="form-control">
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <textarea asp-for="Comment"  class="form-control" cols="30" rows="6" placeholder="نظرات خود را بنویسید ...."></textarea>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <a href="#" class="btn search-btn">
                            ارسال دیدگاه
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>