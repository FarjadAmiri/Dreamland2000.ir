@using Microsoft.IdentityModel.Tokens
@model IEnumerable<WebSite.DataLayer.Entities.Testimonial.Testimonial>

<section class="gray-simple">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-lg-7 col-md-8">
				<div class="sec-heading center">
                    <h2>
                        نظرات خوب توسط مشتریان
                    </h2>
                    <p>
                        رضایتمندی مشتریان از خدمات گروه مشاوران دریملند هدف اصلی ماست
                    </p>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 col-md-12">
				<div class="item-slide space">
					@foreach (var item in Model)
                    {
                       <div class="single_items">
                            <div class="_testimonial_wrios">
                                <div class="_testimonial_flex">
                                    <div class="_testimonial_flex_first">
                                        <div class="_tsl_flex_thumb">
                                            <img src="/design/user.png" class="img-fluid" alt="@item.Name">
                                        </div>
                                        <div class="_tsl_flex_capst">
                                            <h5>
                                                @item.Name
                                            </h5>
                                            <div class="_ovr_posts mt-2">
                                                <span>
                                                    @item.Service
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>

                                <div class="facts-detail">
                                    <p style="text-align:justify;height:90px">
                                        @if (item.Message != null && item.Message.Length > 200)
                                        {
											@item.Message.Substring(0,199)
                                            <span> . . . </span>
                                        }
                                        else
                                        {
                                            @item.Message
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

				</div>
			</div>
		</div>

	</div>
</section>
