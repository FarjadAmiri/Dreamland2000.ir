@model WebSite.Core.ViewModel.Account.LoginViewModel
@{
    ViewData["Title"] = "ورود به حساب کاربری";
    ViewData["MetaDescription"] = "ورود به حساب کاربری سایت دریملند 2000";
    
    ViewData["Robots"] = "nofollow";

}

<div class="page-title" style="background:#f4f4f4 url(/website/img/slider-1.jpg);" data-overlay="5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="breadcrumbs-wrap">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">
                            حساب کاربری
                        </li>
                    </ol>
                    <h2 class="breadcrumb-title">
                        فرم ورود به پیشخوان کاربری
                    </h2>
                </div>

            </div>
        </div>
    </div>
</div>

<section class="pt-2">
	<div class="container">
		<!-- row Start -->
		<div class="row">
			<div class="col-lg-8 col-md-7">
				<div class="property_block_wrap">

					<div class="property_block_wrap_header">
                        <h4 class="property_block_title">
                            فرم ورود به حساب کاربری
                        </h4>
                        <partial name="_AlertPartial"/>
					</div>
                    <form method="post" asp-action="Login">
                        <input type="hidden" asp-for="Captcha" />
                        <div class="block-body">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <label>
                                            شماره موبایل
                                        </label>
                                        <input asp-for="Mobile" type="text" class="form-control simple">
                                        <span asp-validation-for="Mobile" class="alert-danger" style="color: red"></span>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <label>
                                            کلمه عبور
                                        </label>
                                        <input asp-for="Password" type="password" class="form-control simple">
                                        <span asp-validation-for="Password" class="alert-danger" style="color: red"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-theme" type="submit">
                                    ورود به حساب کاربری
                                </button>
                            </div>
                        </div>
                    </form>

				</div>

			</div>

			
                <div class="col-lg-4 col-md-5">
                    <img src="/design/banner/Banner01-400px400px.jpg"/>
                </div>	
			

		</div>
		
	</div>
</section>




