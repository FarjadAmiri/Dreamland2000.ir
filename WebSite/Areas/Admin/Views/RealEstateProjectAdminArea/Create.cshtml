@model WebSite.Core.ViewModel.RealEstate.AddNewRealEstateProjectByAdminViewModel

@{
    ViewData["Title"] = "New Rent";
    int i = 0;
}
<div class="row">
    <div class="col-md-6 col-12 mb-2">
        <h3 class="content-header-title">
            Admin Panel
        </h3>
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <ol class="breadcrumb">

                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">
                            Home Page
                        </a>
                    </li>

                    <li class="breadcrumb-item">
                        <a asp-controller="RealEstateProjectAdminArea" asp-action="Index">
                            Project
                        </a>
                    </li>

                    <li class="breadcrumb-item active">
                        New Project
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="from-actions-top-bottom-center">
                    New Project
                </h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                <hr />
                <partial name="_AlertPartial" />
            </div>
            <div class="collpase show">
                <div class="card-body">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        <input type="hidden" asp-for="LanguageRefId" />
                        <input type="hidden" asp-for="LanguageEnglishTitle" />
                        <input type="hidden" asp-for="LanguageShortTitle" />

                        <div class="row">
                            <div class="col-lg-4">

                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">
                                        Language
                                    </label>
                                    <div class="col-sm-6">
                                        <input type="text" value="@Model.LanguageEnglishTitle" class="form-control" disabled="disabled">
                                    </div>
                                    <div class="col-sm-2">
                                        @{
                                            var photoName = Model.LanguageShortTitle + ".png";
                                        }
                                        <img src="/design/flags/@photoName" style="width:100%"/>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Title" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Title" class="form-control">
                                        <span asp-validation-for="Title" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="ShortTitle" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="ShortTitle" class="form-control">
                                        <span asp-validation-for="ShortTitle" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Code" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Code" class="form-control">
                                        <span asp-validation-for="Code" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Tags" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Tags" class="form-control" placeholder="Seperator: ','">
                                        <span asp-validation-for="Tags" class="alert-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="col-lg-4">
                                <div class="form-group row">
                                    <label asp-for="Location" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Location" class="form-control">
                                        <span asp-validation-for="Location" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Area" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Area" class="form-control">
                                        <span asp-validation-for="Area" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Price" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Price" class="form-control">
                                        <span asp-validation-for="Price" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Room" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Room" class="form-control">
                                        <span asp-validation-for="Room" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Bathroom" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="text" asp-for="Bathroom" class="form-control">
                                        <span asp-validation-for="Bathroom" class="alert-danger"></span>
                                    </div>
                                </div>
                               
                            </div>

                            <div class="col-lg-4">
                                
                                <div class="form-group row">
                                    <label asp-for="CityRefId" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <select class="form-control select2" asp-for="CityRefId" asp-items="ViewBag.CityRefId">
                                            <option value="">--Select city--</option>
                                        </select>
                                        <span asp-validation-for="CityRefId" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="AgentRefId" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <select class="form-control select2" asp-for="AgentRefId" asp-items="ViewBag.AgentRefId">
                                            <option value="">--Select agent--</option>
                                        </select>
                                        <span asp-validation-for="AgentRefId" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="StatusRefId" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <select class="form-control select2" asp-for="StatusRefId" asp-items="ViewBag.StatusRefId"></select>
                                        <span asp-validation-for="StatusRefId" class="alert-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Select Photo List</label>
                                    <div class="col-sm-8">
                                        <input type="file" id="uploadPhotos" name="uploadPhotos" multiple class="form-control">
                                    </div>
                                </div>

                            </div>

                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <textarea asp-for="Summary" rows="16" class="form-control"></textarea>
                                        <span asp-validation-for="Summary" class="alert-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <hr />
                                <div class="form-group text-center">
                                    <input type="submit" class="btn btn-success" value="Save Now" />
                                    <a asp-controller="RealEstateProjectAdminArea" asp-action="Index" class="btn btn-dark">
                                        Back
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


@section AdminFooter {
    <partial name="_UploadPhotoScriptPartial" />
    <partial name="_CkEditorSummaryWithoutToolbarScriptPartialEnglish" />
}
