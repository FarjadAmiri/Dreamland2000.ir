@model WebSite.Core.ViewModel.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "ریست کلمه عبور";
}


<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">
                    ریست کلمه عبور
                </h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">
                                    خانه
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index" asp-area="Admin">
                                    پیشخوان مدیر
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="UserAdminArea" asp-action="Index" asp-area="Admin">
                                    مدیریت کاربران
                                </a>
                            </li>
                            <li class="breadcrumb-item active">
                                ریست کلمه عبور کاربر
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div id="recent-transactions" class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                ریست کلمه عبور کاربر
                            </h4>
                            <a class="heading-elements-toggle">
                                <i class="fa fa-ellipsis-v font-medium-3"></i>
                            </a>
                            <hr />
                            <partial name="_AlertPartial" />

                        </div>
                        <div class="card-content">
                            <form class="form-sample" asp-controller="UserAdminArea" asp-action="ResetPassword" method="post">

                                <input type="hidden" asp-for="UserRefId"/>
                                <div class="row" style="margin-top: 50px">

                                    <div class="col-md-4"></div>

                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label asp-for="User!.FirstName" class="col-sm-4 col-form-label"></label>
                                            <div class="col-sm-8">
                                                <input asp-for="User!.FirstName" type="text" class="form-control" disabled="disabled">
                                                <span asp-validation-for="User!.FirstName" class="alert-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="User!.LastName" class="col-sm-4 col-form-label"></label>
                                            <div class="col-sm-8">
                                                <input asp-for="User!.LastName" type="text" class="form-control" disabled="disabled">
                                                <span asp-validation-for="User!.LastName" class="alert-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="User!.Mobile" class="col-sm-4 col-form-label">
                                            </label>
                                            <div class="col-sm-8">
                                                <input asp-for="User!.Mobile" type="text" class="form-control" disabled="disabled">
                                                <span asp-validation-for="User!.Mobile" class="alert-danger"></span>
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label asp-for="NewPassword" class="col-sm-4 col-form-label">
                                            </label>
                                            <div class="col-sm-8">
                                                <input asp-for="NewPassword" type="text" class="form-control">
                                                <span asp-validation-for="NewPassword" class="alert-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label"></label>
                                            <div class="col-sm-8">
                                                <input asp-for="ConfirmPassword" type="text" class="form-control">
                                                <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4"></div>

                                    <div class="col-md-12" style="text-align: center; margin-bottom: 20px">
                                        <hr/>
                                        <button type="submit" class="btn btn-primary mr-2">
                                            ریست کلمه عبور
                                        </button>

                                        <a asp-controller="UserAdminArea" asp-action="Details" asp-route-id="@Model.UserRefId" class="btn btn-secondary mr-2 text-white">
                                            بازگشت
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


