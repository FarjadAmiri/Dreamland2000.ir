@using WebSite.DataLayer.Entities.User
@model WebSite.Core.ViewModel.User.AddNewUserByAdminViewModel

@{
    ViewData["Title"] = "کاربران";
    var objRoleList = ViewBag.RoleList as IEnumerable<Role>;
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">
                    کاربران سایت
                </h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">
                                    خانه
                                </a>
                            </li>
                          
                            <li class="breadcrumb-item">
                                <a asp-controller="UserAdminArea" asp-action="Index" asp-area="Admin">
                                     مدیریت کاربران
                                </a>
                            </li>
                            <li class="breadcrumb-item active">
                                ثبت کاربر جدید
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div id="recent-transactions" class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                ثبت کاربر جدید
                            </h4>
                            <a class="heading-elements-toggle">
                                <i class="fa fa-ellipsis-v font-medium-3"></i>
                            </a>
                            <hr />
                            <partial name="_AlertPartial" />
                        </div>
                        <div class="card-content">

                            <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div class="row">

                                    <div class="col-md-1"></div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">
                                                موبایل
                                            </label>
                                            <div class="col-sm-8">
                                                <input asp-for="Mobile" type="text" class="form-control">
                                                <span asp-validation-for="Mobile" class="alert-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">
                                                نام
                                            </label>
                                            <div class="col-sm-8">
                                                <input asp-for="FirstName" type="text" class="form-control">
                                                <span asp-validation-for="FirstName" class="alert-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">
                                                نام خانوادگی
                                            </label>
                                            <div class="col-sm-8">
                                                <input asp-for="LastName" type="text" class="form-control">
                                                <span asp-validation-for="LastName" class="alert-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">
                                                نقش های کاربر
                                            </label>
                                            <div class="col-sm-8">
                                                <div class="row">
                                                    @foreach (var item in objRoleList)
                                                    {
                                                        <div class="col-md-12">
                                                            <input type="checkbox" name="SelectedRoles" value="@item.Id" id="@item.Id">
                                                            <label for="@item.Id" style="margin-top: 10px;">@item.Title</label>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group row">
                                            <img id="image" style="width: 100%; height: 100%" class="img-thumbnail" src="~/design/no-photo-s.jpg" />
                                        </div>
                                        <div class="form-group row">
                                            <input type="file" data-buttonname="btn-secondary" name="uploadPhoto" id="uploadPhoto" tabindex="-1" style="position: absolute; clip: rect(0px, 0px, 0px, 0px);">
                                            <div class="input-group">
                                                <span class="input-group-append" tabindex="0">
                                                    <label for="uploadPhoto" class="btn btn-secondary ">
                                                        <span class="fa fa-folder-open"></span>
                                                        <span>
                                                            انتخاب تصویر
                                                        </span>
                                                    </label>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-12" style="text-align: center; margin-bottom: 20px">
                                        <hr />
                                        <button type="submit" class="btn btn-primary mr-2">
                                            ثبت کاربر جدید
                                        </button>
                                        <a asp-controller="UserAdminArea" asp-action="Index" class="btn btn-secondary mr-2 text-white">
                                            بازگشت
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section AdminFooter {
    <partial name="_UploadPhotoScriptPartial" />
}