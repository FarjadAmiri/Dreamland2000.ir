@using WebSite.Core.Utility
@model WebSite.DataLayer.Entities.Agent.AgentComment

@{
    ViewData["Title"] = "پروفایل دیدگاه";

    //send date
    string strSendDate = "";
    if (Model.SendDate != null)
    {
        strSendDate = Model.SendDate.Value.GregorianToPersian();
    }
    
}
<div class="row">
    <div class="col-md-6 col-12 mb-2">
        <h3 class="content-header-title">
            پیشخوان مدیر
        </h3>
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">
                            خانه
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="AgentAdminArea" asp-action="Index">
                            مشاوران
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        پروفایل دیدگاه
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="from-actions-top-bottom-center">
                    پروفایل خبر
                </h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                <hr />
                <p>
                    <a asp-controller="AgentCommentAdminArea" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">
                        بروزرسانی
                    </a>
                    <a data-toggle="modal" data-target="#delete-confirm" class="btn btn-danger text-white">
                        حذف
                    </a>
                    <a asp-controller="AgentCommentAdminArea" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary">
                        بازگشت
                    </a>
                </p>
                <partial name="_AlertPartial" />
            </div>
            <div class="collpase show">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">

                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input type="text" asp-for="Name" class="form-control" disabled="disabled">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Tell" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input type="text" asp-for="Tell" class="form-control" disabled="disabled">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input type="text" asp-for="Email" class="form-control" disabled="disabled">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="SendDate" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input type="text" value="@strSendDate" class="form-control" disabled="disabled">
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-6">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <textarea asp-for="Comment" rows="12" class="form-control" disabled="disabled"></textarea>
                                </div>
                            </div>
                        </div>
                       

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




<!-- delete Modal -->
<div class="modal fade" id="delete-confirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel5" aria-hidden="true" style="direction:rtl;text-align:right;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel5">
                    هشدار
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                آیا از حذف دیدگاه انتخابی اطمینان دارید؟
            </div>
            <div class="modal-footer">
                <form asp-controller="AgentCommentAdminArea" asp-action="Delete" asp-route-id="@Model.Id" method="get">
                    <button type="submit" class="btn btn-danger" style="margin-left: 10px;">
                        تایید
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        انصراف
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>