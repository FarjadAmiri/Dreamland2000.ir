<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <title>
        @ViewData["Title"]
    </title>
    <partial name="_AdminMetaPartial" />
    <partial name="_AdminStylePartial" />

    @await RenderSectionAsync("AdminHeader", false)
</head>
<body class="horizontal-layout horizontal-menu 2-columns   menu-expanded" data-open="hover" data-menu="horizontal-menu" data-col="2-columns">

    <partial name="_AdminNavbarPartial" />

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer footer-static footer-light navbar-shadow">
        <p class="clearfix blue-grey lighten-2 text-sm-center mb-0 px-2">
            <span class="float-md-right d-block d-lg-block">
                Design By :
                <a class="grey darken-2" href="https://farjadtech.com" target="_blank">
                    Farjad software group
                </a>
            </span>
        </p>
    </footer>
    
   
    <partial name="_AdminScriptPartial" />
    <partial name="_GoogleAnalyticPartial" />
    <partial name="_GoogleReCaptchaPartial" />

    @await RenderSectionAsync("AdminFooter", false)

</body>
</html>