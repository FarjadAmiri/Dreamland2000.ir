@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<WebSite.DataLayer.Entities.Blog.Blog>
<section class="min">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-8">
                <div class="sec-heading center">
                    <h2>
                        Últimas noticias y artículos
                    </h2>
                    <p>
                        Las últimas noticias y artículos de Dreamland Consulting Group en la revista Dreamland
                    </p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="grid_blog_box shadow-0">

                        <div class="gtid_blog_thumb">
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" title="@item.Title">
                                <img src="/upload/blog/thumb/@item.Photo" class="img-fluid" alt="@item.Title" style="width:100%"/>
                            </a>
                            @if (item.BlogDate != null)
                            {
                                <div class="gtid_blog_info">
                                    <span>
                                        @item.BlogDate.Value.Day
                                    </span>

                                    @item.BlogDate.Value.ToString("MMM", CultureInfo.InvariantCulture)

                                    @item.BlogDate.Value.Year

                                </div>
                            }
                        </div>

                        <div class="blog-body">
                            <h4 class="bl-title">
                                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" title="@item.Title">
                                    @item.Title
                                </a>
                            </h4>

                        </div>

                        <div class="modern_property_footer">
                            <div class="property-author">
                                <div class="path-img">
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" title="@item.Title" tabindex="-1">
                                        <img src="/design/user.png" class="img-fluid" alt="@item.Title - @item.Author">
                                    </a>
                                </div>
                                <h5>
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" title="@item.Title" tabindex="-1">
                                        @item.Author
                                    </a>
                                </h5>
                            </div>
                            <span class="article-pulish-date">
                                <i class="ti-comment-alt me-2"></i>
                                @item.CommentList!.Count
                            </span>
                        </div>

                    </div>
                </div>
            }
        </div>
        
        <div class="row mt-5">
            <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                <a asp-controller="Blog" asp-action="Index" title="Explorar más artículos" class="btn btn-light-danger">
                    Explorar más artículos
                </a>
            </div>
        </div>
      
    </div>
</section>















