@model WebSite.Core.ViewModel.Agent.AgentSendMessageViewModelSpanish
<div class="modal fade" id="autho-message" tabindex="-1" role="dialog" aria-labelledby="authomessage" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered login-pop-form" role="document">
        <div class="modal-content" id="authomessage">
            <span class="mod-close" data-bs-dismiss="modal" aria-hidden="true"><i class="ti-close"></i></span>
            <div class="modal-body">
                <h4 class="modal-header-title">
                    Enviar mensaje
                </h4>
                <div class="login-form">

                    <form asp-controller="Agent" asp-action="SendMessage" method="post">
                        <input type="hidden" asp-for="AgentRefId" />	

                        <div class="form-group">
                            <label>
                                Name
                            </label>
                            <div class="input-with-icons">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Su nombre">
                                <span asp-validation-for="Name" class="alert-danger" style="color: red"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>
                                Phone Number
                            </label>
                            <div class="input-with-icons">
                                <input asp-for="Tell" type="text" class="form-control" placeholder="Número de teléfono">
                                <span asp-validation-for="Tell" class="alert-danger" style="color: red"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>
                                Email Address
                            </label>
                            <div class="input-with-icons">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Dirección de correo electrónico">
                                <span asp-validation-for="Email" class="alert-danger" style="color: red"></span>
                            </div>
                        </div>
									
                        <div class="form-group">
                            <label>Messages</label>
                            <div class="input-with-icons">
                                <textarea asp-for="Message" class="form-control ht-80"></textarea>
                                <span asp-validation-for="Message" class="alert-danger" style="color: red"></span>
                            </div>
                        </div>
									
                        <div class="form-group">
                            <button type="submit" class="btn full-width fw-medium btn-danger">
                                Enviar ahora
                            </button>
                        </div>
								
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
