@model WebSite.DataLayer.Entities.Contact.Contact
@{
    ViewData["Title"] = "Contact us";
    ViewData["MetaDescription"] = "Contact us with Dreamland 2000";
}

<div class="page-title" style="background:#f4f4f4 url(/english/img/slider-3.jpg);" data-overlay="5">
    <div class="ht-80"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 position-relative z-1">
                <div class="_page_tetio">
                    <div class="pledtio_wrap">
                        <span>
                            Contáctanos
                        </span>
                    </div>
                    <h2 class="text-light mb-0">
                        Obtenga ayuda y soporte amigable
                    </h2>
                    <p>
                        ¿Necesitas ayuda o soporte? Estamos disponibles las 24 horas.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="ht-120"></div>
</div>

<section class="pt-0">
    <div class="container">
        <div class="row align-items-center pretio_top">

            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="contact-box">
                    <i class="ti-shopping-cart theme-cl"></i>
                    <h4>
                        Contact Agents
                    </h4>
                    <p>
                        @Model.Email
                    </p>
                    <span>
                        @Model.Tell
                    </span>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="contact-box">
                    <i class="ti-user theme-cl"></i>
                    <h4>
                        Contact Support
                    </h4>
                    <p>
                        @Model.Email
                    </p>
                    <span>
                        @Model.Tell
                    </span>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="contact-box">
                    <i class="ti-comment-alt theme-cl"></i>
                    <h4>
                        Whatsapp
                    </h4>
                    <span>
                        @Model.Tell
                    </span>
                    <span class="live-chat">
                        Live Chat
                    </span>
                </div>
            </div>

        </div>  
        
        <div class="row">
            <div class="col-lg-8 col-md-7">

                @await Component.InvokeAsync(typeof(WebSite.Areas.Spanish.ViewComponents.ContactSendMessageForm9Col))
            </div>

            <div class="col-lg-4 col-md-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d102341.63585706627!2d-4.531669550442194!3d36.71833121135631!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd7259c44fdb212d%3A0x6025dc92c9ca32cf!2zTcOhbGFnYSwgU3BhaW4!5e0!3m2!1sen!2s!4v1743495193307!5m2!1sen!2s" width="100%" height="300px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

    </div>
</section>

