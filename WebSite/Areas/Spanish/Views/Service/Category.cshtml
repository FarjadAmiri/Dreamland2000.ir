@model IEnumerable<WebSite.DataLayer.Entities.Service.ServiceGroup>
@{
    ViewData["Title"] = "دسته بندی خدمات دریملند";
    ViewData["MetaDescription"] = "دسته بندی خدمات گروه مشاوران دریملند";
}

<div class="page-title" style="background:#f4f4f4 url(/design/banner/header03.jpg);" data-overlay="5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="breadcrumbs-wrap">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">
                            خدمات ما
                        </li>
                    </ol>
                    <h2 class="breadcrumb-title">
                        خدمات گروه مشاوران دریملند
                    </h2>
                </div>

            </div>
        </div>
    </div>
</div>
<section class="gray">

    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="grid_blog_box">

                        <div class="gtid_blog_thumb">
                            <a asp-controller="Service" asp-action="Index" asp-route-group="@item.Id" title="@item.Title">
                                <img src="/upload/service/thumb/@item.Photo" class="img-fluid" alt="@item.Title" />
                            </a>
                            <div class="gtid_blog_info">
                               
                            </div>
                        </div>

                        <div class="blog-body">
                            <h4 class="bl-title" style="height:40px">
                                <a asp-controller="Service" asp-action="Index" asp-route-group="@item.Id" title="@item.Title">
                                    @item.Title
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>

