@model IEnumerable<WebSite.DataLayer.Entities.Service.Service>
@{
    ViewData["Title"] = "Our Services";
    ViewData["MetaDescription"] = "Dreamland 2000 Services List";
}


<div class="page-title" style="background:#f4f4f4 url(/english/img/slider-3.jpg);" data-overlay="5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="breadcrumbs-wrap position-relative z-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">
                            Services
                        </li>
                    </ol>
                    <h2 class="breadcrumb-title">
                        Our Services
                    </h2>
                </div>

            </div>
        </div>
    </div>
</div>

<section class="gray">

    <div class="container">

        <div class="row">
            <div class="col text-center">
                <div class="sec-heading center">
                    <h2>
                        Our Services
                    </h2>
                    <p>
                        Dreamland Group Services
                    </p>
                </div>
            </div>
        </div>


        <div class="row g-4">

            @foreach (var item in Model.ToList())
            {
                <div class="col-lg-4 col-md-6">
                    <div class="grid_blog_box shadow-0">

                        <div class="gtid_blog_thumb">
                            <a asp-controller="Service" asp-action="Details" asp-route-id="@item.Id" title="@item.Title">
                                <img src="/upload/service/thumb/@item.Photo" class="img-fluid" alt="@item.Title" style="width:100%" />
                            </a>
                        </div>

                        <div class="blog-body">
                            <h4 class="bl-title">
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@item.Id" title="@item.Title">
                                    @item.Title
                                </a>
                            </h4>
                        </div>

                    </div>
                </div>
            }

        </div>

      

    </div>
</section>

