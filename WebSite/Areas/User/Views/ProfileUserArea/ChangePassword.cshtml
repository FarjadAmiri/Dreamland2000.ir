@model WebSite.Core.ViewModel.User.ChangePasswordByUserViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="row">
    <div class="col-md-6 col-12 mb-2">
        <h3 class="content-header-title">
            پیشخوان مدیر
        </h3>
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">
                            صفحه نخست
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="ProfileUserArea" asp-action="Profile">
                            پروفایل کاربری
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        تغییر کلمه عبور
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="from-actions-top-bottom-center">
                    تغییر کلمه عبور
                </h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                <hr />
                <partial name="_AlertPartial" />
            </div>
            <div class="collpase show">
                <div class="card-body">

                    <form asp-action="ChangePassword" method="post" >
                        <input type="hidden" asp-for="UserRefId"/>
                        
                        <div class="row">
                            <div class="col-md-4"></div>

                            <div class="col-md-4">

                                <div class="form-group row">
                                    <label asp-for="OldPassword" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="password" asp-for="OldPassword" class="form-control">
                                        <span asp-validation-for="OldPassword" class="alert-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label asp-for="NewPassword" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="password" asp-for="NewPassword" class="form-control">
                                        <span asp-validation-for="NewPassword" class="alert-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="password" asp-for="ConfirmPassword" class="form-control">
                                        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                    </div>
                                </div>


                            </div>

                            <div class="col-md-4"></div>

                            <div class="col-md-12" style="text-align: center">
                                <div class="form-actions center">
                                    <input type="submit" class="btn btn-info" value="تغییر کلمه عبور">
                                    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
                                        بازگشت
                                    </a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>